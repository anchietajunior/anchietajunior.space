<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Posts</h1>
<%= render 'dashboard/shared/notifications' %>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Filters</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <% if @posts.present? %>
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Title</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th>Published at</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Title</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th>Published at</th>
              <th>Actions</th>
            </tr>
          </tfoot>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.created_at %></td>
                <td><%= post.updated_at %></td>
                <td><%= post.published_at %></td>
                <td>
                  <%= link_to dashboard_post_path(post) do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_dashboard_post_path(post) do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to dashboard_post_path(post), method: :delete, data: { confirm: 'Delete post?' } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No posts have been posted yet. </p>
      <% end %>
    </div>
  </div>
</div>
